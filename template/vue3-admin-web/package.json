{
    "name": "vue3-admin-web",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "run-p type-check build-only",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
        "lint:eslint": "eslint --ext .js,.jsx,.vue,.ts,.tsx,.json,.html",
        "lint:stylelint": "stylelint *.{scss,css,less,vue,html} --fix",
        "prepare": "husky install",
        "lint-staged": "lint-staged",
        "cz": "npx cz"
    },
    "dependencies": {
        "pinia": "^2.1.6",
        "vue": "^3.3.4",
        "vue-router": "^4.2.4"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^0.41.0",
        "@commitlint/config-conventional": "^17.7.0",
        "@tsconfig/node18": "^18.2.0",
        "@types/node": "^18.17.5",
        "@vitejs/plugin-vue": "^4.3.1",
        "@vitejs/plugin-vue-jsx": "^3.0.2",
        "@vue/tsconfig": "^0.4.0",
        "commitlint": "^17.7.1",
        "commitizen": "^4.3.0",
        "conventional-changelog": "^5.0.0",
        "conventional-changelog-cli": "^4.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.48.0",
        "husky": "^8.0.0",
        "lint-staged": "^14.0.1",
        "npm-run-all": "^4.1.5",
        "stylelint": "^15.10.3",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-standard-scss": "^10.0.0",
        "stylelint-config-standard-vue": "^1.0.0",
        "stylelint-scss": "^5.1.0",
        "typescript": "~5.1.6",
        "vite": "^4.4.9",
        "vue-tsc": "^1.8.8"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "!(components.d|auto-imports.d)*.{js,jsx,vue,ts,tsx,json,html}": [
            "eslint  --fix"
        ],
        "*.{scss,css,less,vue,html}": [
            "stylelint --fix"
        ]
    }
}
